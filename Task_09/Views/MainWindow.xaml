<Window x:Class="Task_09.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Создание разрезов"
        Width="400"
        Height="420"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Topmost="True">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Имя разреза 1-->
        <TextBlock Grid.Row="0" Text="Имя разреза 1:" Margin="0,0,0,5"/>
        <TextBox Grid.Row="1"
         Text="{Binding SectionName, UpdateSourceTrigger=PropertyChanged}"
         Margin="0,0,0,15"
         Height="25"/>

        <!-- Имя разреза 2-->
        <TextBlock Grid.Row="2" Text="Имя разреза 2:" Margin="0,0,0,5"/>
        <TextBox Grid.Row="3"
         Text="{Binding SectionName2, UpdateSourceTrigger=PropertyChanged}"
         Margin="0,0,0,15"
         Height="25"/>

        <!-- Имя разреза 3-->
        <TextBlock Grid.Row="4" Text="Имя разреза 3:" Margin="0,0,0,5"/>
        <TextBox Grid.Row="5"
         Text="{Binding SectionName3, UpdateSourceTrigger=PropertyChanged}"
         Margin="0,0,0,15"
         Height="25"/>

        <!-- Отступы -->
        <TextBlock Grid.Row="6" Text="Отступы (мм):" Margin="0,0,0,10" FontWeight="Bold"/>

        <!-- Ширина -->
        <Grid Grid.Row="7" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="По ширине:" VerticalAlignment="Center"/>
            <TextBox Grid.Column="1"
             Text="{Binding WidthOffsetMm, UpdateSourceTrigger=PropertyChanged}"
             Height="25"/>
        </Grid>
        <!-- Глубина -->
        <Grid Grid.Row="8" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="По глубине:"
                       VerticalAlignment="Center"/>

            <TextBox Grid.Column="1"
                     Text="{Binding DepthOffsetMm, UpdateSourceTrigger=PropertyChanged}"
                     Height="25"/>
        </Grid>

        <!-- Высота -->
        <Grid Grid.Row="9" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="По высоте:"
                       VerticalAlignment="Center"/>

            <TextBox Grid.Column="1"
                     Text="{Binding HeightOffsetMm, UpdateSourceTrigger=PropertyChanged}"
                     Height="25"/>
        </Grid>

        <!-- Кнопка -->
        <Button Grid.Row="11"
                Content="Создать разрез"
                Command="{Binding CreateSectionCommand}"
                Height="35"
                FontSize="14"
                FontWeight="Bold"/>
    </Grid>
</Window>
